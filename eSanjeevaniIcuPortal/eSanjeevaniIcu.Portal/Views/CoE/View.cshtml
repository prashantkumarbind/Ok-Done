@model eSanjeevaniIcu.Portal.Models.CoE.CoeModel
@using Microsoft.Extensions.Options;
@using eSanjeevaniIcu.Portal.Controllers;

@inject IOptions<ApplicationConfigurations> OptionsApplicationConfiguration
@{
    string apiUrl = @OptionsApplicationConfiguration.Value.ApplicationHostUrl;
    ViewData["Title"] = "Coe";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="PageBorder">
    <div class="row">
        <div class="col-md-12">
            <div class="table color-table PageTitle">
                Coe Details
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-8">
                <div class="table color-table">
                    <dl class="row">

                        <dt class="col-sm-3 padd5">
                            CoE Name
                        </dt>

                        <dd class="col-sm-9 padd5">
                            : @Html.DisplayFor(model => model.CoeName)
                        </dd>
                        <dt class="col-sm-3 padd5">
                            CoE Code
                        </dt>

                        <dd class="col-sm-9 padd5">
                            : @Html.DisplayFor(model => model.CoeCode)
                        </dd>
                        <dt class="col-sm-3 padd5">
                            Created On
                        </dt>
                        <dd class="col-sm-9 padd5">
                            : @Model.CreatedOn.ToString("dd-MM-yyyy")
                        </dd>
     
                       
                        <dt class="col-sm-3 padd5">
                            Status
                        </dt>
                        <dd class="col-sm-9 padd5">
                            : @Model.StatusName
                        </dd>
                        <dt class="col-sm-3 padd5">
                            Designation
                        </dt>
                        <dd class="col-sm-9 padd5">
                            : @Model.Designation
                        </dd>
                    </dl>

                </div>
            </div>
            <div class="col-md-4 text-center">
                @if (Model.ProfileImage != null && Model.ProfileImage != "")
                {
                    <img id="imagePreview" alt="" src="@Model.ProfileImage" class="mt-4 p-image" style="height:200px; width:200px; border-radius:20%;" />
                }
                else
                {
                    <img id="imagePreview" alt="" src="~/images/user.png" class="mt-4 p-image " style="height:200px; width:200px; border-radius:20%;" />
                }
            </div>
        </div>
        <div class="col-md-12">
            <div class="table color-table PageTitle">
                Contact Details
            </div>
        </div>
        <div class="col-md-12">
            <div class="table color-table">
                <dl class="">
                    <dt class="col-sm-2 padd5">
                        Phone Number
                    </dt>
                    <dd class="col-sm-10 padd5">
                        : @Html.DisplayFor(model => model.ContactNumber)
                    </dd>

                    <dt class="col-sm-2 padd5">
                        Email Address
                    </dt>
                    <dd class="col-sm-10 padd5">
                        : @Html.DisplayFor(model => model.EmailAddress)
                    </dd>
                   
                </dl>
            </div>
        </div>
        <div class="col-md-12">
            <div class="table color-table PageTitle">
                Address
            </div>
        </div>
        <div class="col-md-12">
            <div class="table color-table">
                <dl class="">
                    <dt class="col-sm-2 padd5">
                        Place of Work
                    </dt>
                    <dd class="col-sm-10 padd5">
                        : @Html.DisplayFor(model => model.PlaceOfWork)
                    </dd>
                    <dt class="col-sm-2 padd5">
                        Address Line 1
                    </dt>
                    <dd class="col-sm-10 padd5">
                        : @Html.DisplayFor(model => model.AddressLine1)
                    </dd>
                    <dt class="col-sm-2 padd5">
                        Address Line 2
                    </dt>
                    <dd class="col-sm-10 padd5">
                        : @Html.DisplayFor(model => model.AddressLine2)
                    </dd>
                    <dt class="col-sm-2 padd5">
                        State
                    </dt>
                    <dd class="col-sm-10 padd5">
                        : @Html.DisplayFor(model => model.StateName)
                    </dd>
                    <dt class="col-sm-2 padd5">
                        District
                    </dt>
                    <dd class="col-sm-10 padd5">
                        : @Html.DisplayFor(model => model.DistrictName)
                    </dd>
                    <dt class="col-sm-2 padd5">
                        City
                    </dt>
                    <dd class="col-sm-10 padd5">
                        : @Html.DisplayFor(model => model.CityName)
                    </dd>
                    <dt class="col-sm-2 padd5">
                        Pin Code
                    </dt>
                    <dd class="col-sm-10 padd5">
                        : @Html.DisplayFor(model => model.PinCode)
                    </dd>
                </dl>
            </div>
        </div>
    </div>
    <div>
        <div class="row mb-5">
            <div class="col-md-12 text-left">
                <a asp-action="Edit" asp-route-id="@Model.CoeId" class="btn btn-primary">Edit</a>
                <a asp-action="Index" class="btn btn-primary">Back to List</a>
            </div>
        </div>
    </div>

    <!-- /.content -->
</div>
