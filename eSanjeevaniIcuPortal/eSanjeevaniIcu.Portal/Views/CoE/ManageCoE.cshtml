                    <div class="col-md-12">
                        Manage CoE
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        
    </div>
    <div class="row">
        <div class="col-md-12">
            <div data-addui='tabs'>
                <div role='tabs'>
                    <div>Specialist</div>
                    <div>Spoke</div>
                   
                </div>
                <div role='contents'>
                    <div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="table color-table PageTitle">
                                    <div class="row">
                                        <div class="col-md-8">
                                            Add Specialist
                                        </div>
                                        <div class="col-md-4" style="text-align:right">
