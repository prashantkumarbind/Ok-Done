@model eSanjeevaniIcu.Portal.Models.SpokeHospital.SpokeHospitalViewModel

@{
    ViewData["Title"] = "Spoke Hospital";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="PageBorder">
    <div class="row">
        <div class="col-md-12">
            <div class="table color-table PageTitle">
                Delete Spoke Hospital
            </div>
        </div>
    </div>

    <h4>Are you sure you want to delete this?</h4>
    <div>
        <hr />
        <dl class="col-md-12">
            <dt class="col-sm-2 padd5">
                Spoke Hospital Name
            </dt>
            <dd class="col-sm-10 padd5">
                :
                @Html.DisplayFor(model => model.SpokeHospitalName)
            </dd>
            <dt class="col-sm-2 padd5">
                COE Name
            </dt>
            <dd class="col-sm-10 padd5">
                :
                @Html.DisplayFor(model => model.HubHospitalName)
            </dd>
            <dt class="col-sm-2 padd5">
                Contact No
            </dt>
            <dd class="col-sm-10 padd5">
                :
                @Html.DisplayFor(model => model.ContactNo)
            </dd>
            <dt class="col-sm-2 padd5">
                Email
            </dt>
            <dd class="col-sm-10 padd5">
                :
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt class="col-sm-2 padd5">
                Address Line1
            </dt>
            <dd class="col-sm-10 padd5">
                :
                @Html.DisplayFor(model => model.Address1)
            </dd>
            <dt class="col-sm-2 padd5">
                Address Line2
            </dt>
            <dd class="col-sm-10 padd5">
                :
                @Html.DisplayFor(model => model.Address2)
            </dd>
            <dt class="col-sm-2 padd5">
                City
            </dt>
            <dd class="col-sm-10 padd5">
                :
                @Html.DisplayFor(model => model.CityName)
            </dd>
            <dt class="col-sm-2 padd5">
                District
            </dt>
            <dd class="col-sm-10 padd5">
                :
                @Html.DisplayFor(model => model.DistrictName)
            </dd>
            <dt class="col-sm-2 padd5">
                State
            </dt>
            <dd class="col-sm-10 padd5">
                :
                @Html.DisplayFor(model => model.StateName)
            </dd>
            <dt class="col-sm-2 padd5">
                Pin
            </dt>
            <dd class="col-sm-10 padd5">
                :
                @Html.DisplayFor(model => model.Pin)
            </dd>
            <dt class="col-sm-2 padd5">
                Created On
            </dt>
            <dd class="col-sm-10 padd5">
                :
                @Model.CreatedOn.ToString("dd-MM-yyyy")
            </dd>
            <dt class="col-sm-2 padd5">
                Created By
            </dt>
            <dd class="col-sm-10 padd5">
                :
                @Html.DisplayFor(model => model.CreatedByName)
            </dd>
            <dt class="col-sm-2 padd5">
                Status
            </dt>
            <dd class="col-sm-10 padd5">
                :
                @Html.DisplayFor(model => model.StatusName)
            </dd>
        </dl>

        <div class="form-control" style="border:none;">
            <form asp-action="Delete">
                <div class="row">
                    <div class="col-md-12 text-left">
                        <input type="hidden" asp-for="SpokeHospitalId" />
                        <input type="submit" value="Delete" class="btn btn-primary" />
                        <a asp-action="Index" class="btn btn-primary">Back to List</a>
                    </div>
                </div>
            </form>
        </div>
        <div class="form-control" style="border:none;">
            <div class="row">
                <div class="col-md-12">
                </div>
            </div>
        </div>
    </div>
</div>
