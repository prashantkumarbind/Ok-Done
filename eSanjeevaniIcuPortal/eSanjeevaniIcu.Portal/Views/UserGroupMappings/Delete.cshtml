@model eSanjeevaniIcu.Portal.Models.UserGroupMappingViewModel

@{
    ViewData["Title"] = "User Group Mapping";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="PageBorder">
    <div class="row">
        <div class="col-md-12">
            <div class="table color-table PageTitle">
                Delete User Group Mapping
            </div>
        </div>
    </div>

    <h4>Are you sure you want to delete this?</h4>
    <div class="table color-table">
        <hr />
        <dl class="row">
            <dt class="col-sm-2 padd5">
                User Name
            </dt>
            <dd class="col-sm-10 padd5">
                :@Html.DisplayFor(model => model.UserName)
            </dd>
            <dt class="col-sm-2 padd5">
                Group Name
            </dt>
            <dd class="col-sm-10 padd5">
                :@Html.DisplayFor(model => model.GroupName)
            </dd>
            <dt class="col-sm-2 padd5">
                Status
            </dt>
            <dd class="col-sm-10 padd5">
                :@Html.DisplayFor(model => model.StatusName)
            </dd>
        </dl>
        <div class="form-control" style="border:none;">
            <form asp-action="Delete">
                <div class="row">
                    <div class="col-md-12 text-left">
                        <input type="hidden" asp-for="UserGroupMappingId" />
                        <input type="submit" value="Delete" class="btn btn-primary" />
                        <a asp-action="Index" class="btn btn-primary">Back to List</a>
                    </div>
                </div>
            </form>
        </div>
        <div class="form-control" style="border:none;">
            <div class="row">
                <div class="col-md-12">
                </div>
            </div>
        </div>
    </div>
</div>
